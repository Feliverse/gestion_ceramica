<div class="container mt-4">
  <div class="alert alert-success" role="alert">
    <%= notice %>
  </div>

  <h1 class="mb-4">VentaSSS</h1>

  <div id="venta" class="row">
    <% @venta.each do |ventum| %>
      <div class="col-md-4 mb-3">
        <div class="card">
          <div class="card-body">
            <%= render ventum %>
            <a href="<%= ventum_path(ventum) %>" class="btn btn-primary mt-3">Muestra esta venta</a>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <a href="<%= new_ventum_path %>" class="btn btn-success mt-4">Nueva venta</a>
</div>
